<div style="height: 580px;">
  <h1 class='h1'>Expedition: <%= @expedition.name %></h1>
  <br>

<div class='two-divs'>
  <div class='column'>
  <p><b>Completed by:</b> <%= link_to @expedition.user.name, user_path(@expedition.user) %></p>
  <p><b>Length:</b> <%= @expedition.days %> Days</p>
  <p><b>Region:</b> <%= @expedition.region %> </p>
  <p><b>Season:</b> <%= @expedition.season %> </p>
  <br>
  <% if @current_user == @expedition.user%>
  <p><%= link_to 'Edit Expedition', edit_expedition_path(@expedition) %>
  <% end %>
  </div>
  <div class='column'>
    
    <p><iframe src="<%= @expedition.region_map %>" width="640" height="480"></iframe></iframe></p>
  </div>
</div>

</div>

<h2 class='h2'>Sightings:</h2>
<div class='user-container'>
  
  
    <% @expedition.sightings.each do |sighting| %>
      
      
      <%= link_to sighting_path(sighting) do %>
      <div class='expedition-tile'>
      <ul class='no-bullets'> 
      
      <div class='clickable-expedition'>
        <ul class='no-bullets'><%= sighting.date %>: 
        <li>Location: <%= sighting.location %></li>
        <li>Cryptid: <%= sighting.cryptid.name %> </li>
        </ul>
      </div>
    </ul>
  </div>
    
    <% end %>
  <% end %>
  
</div>



</div>