<div class="three-divs"></div>

<div class="threediv-1" style="margin-bottom: 50px">
    <h1> <%= @cryptid.name %> </h1>
    <br>
    <div class="two-divs">
            <div class='div-column' style='width: 550px'><%= @cryptid.description %></div>
            <div class='div-column'><%= image_tag @cryptid.img_url, class: 'show-img' %></div>
    </div>
</div>

<div class='threediv-2'>
<div class='user-container'>
  <h2 class='h2'>Sightings:</h2>
    <%if @cryptid.sightings %>
        <% @cryptid.sightings.each do |sighting| %>
        
          <%= link_to sighting_path(sighting) do %>
          <div class='expedition-tile'>
          <ul class='no-bullets'> 
          
          <div class='clickable-expedition'>
            <ul class='no-bullets'>
            <li></li><%= sighting.date %>: </li>
            <li>Location: <%= sighting.location %></li>
            <li>Spotted by: <%= sighting.user.name %></li>
            <li>Temperament: <%= sighting.creature_temperament %></li>
            <li>Fear Struck (of 10): <%= sighting.fear_rating %> </li>
            </ul>
          </div>
          </ul>
          </div>
        <% end %>
    <% end %>
  <% end %>
  
</div>



<div class='div3'>

</div>

</div>
